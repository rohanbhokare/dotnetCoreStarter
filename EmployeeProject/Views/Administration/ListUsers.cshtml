@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>


@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="register" asp-controller="account">Add new user</a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="deleteuser" asp-route-id="@user.Id">
                    <a class="btn btn-primary" asp-route-id="@user.Id" asp-controller="administration" asp-action="EditUser">Edit</a>

                    <span id="confirmDeleteSpan_@user.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <button class="btn btn-primary" type="button" onclick="confirmDelete('@user.Id',false)">NO</button>
                    </span>
                    <span id="deleteSpan_@user.Id">
                        <button class="btn btn-danger" type="button" onclick="confirmDelete('@user.Id',true)">Delete</button>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create the user.
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="Register">
                Add new user
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/site.js"></script>
}
