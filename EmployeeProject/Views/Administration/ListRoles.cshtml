@model IEnumerable<IdentityRole>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService
@{
    ViewData["Title"] = "All Roles";
}


<h1>All Roles</h1>


@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="administration">Add new role</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form asp-action="deleterole" asp-route-id="@role.Id">
                    @if ((await authorizationService.AuthorizeAsync(User, "EditRolePolicy")).Succeeded)
                    {
                        <a class="btn btn-primary" asp-route-id="@role.Id" asp-controller="administration" asp-action="EditRole">Edit</a>
                    }
                    <span id="confirmDeleteSpan_@role.Id" style="display:none">
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <button class="btn btn-primary" type="button" onclick="confirmDelete('@role.Id',false)">NO</button>
                    </span>
                    <span id="deleteSpan_@role.Id">
                        <button class="btn btn-danger" type="button" onclick="confirmDelete('@role.Id',true)">Delete</button>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet.
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create the role.
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="administration" asp-action="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}


@section Scripts {
    <script src="~/js/site.js"></script>
}